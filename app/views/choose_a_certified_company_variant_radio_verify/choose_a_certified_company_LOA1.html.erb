<%= page_title 'hub.choose_a_certified_company_loa1.title' %>
<% content_for :feedback_source, 'CHOOSE_A_CERTIFIED_COMPANY_PAGE' %>
<% content_for :additional_javascript do %>
    <%= javascript_include_tag 'piwik_idp_picker_tracking' %>
<% end %>

<div class="content-inner">
  <div class="grid-row">
    <div class="column-two-thirds">
      <h1 class="heading-large"><%= t 'hub.choose_a_certified_company_loa1.heading' %></h1>
      <p><%= t 'hub.choose_a_certified_company_loa1.content_html' %></p>

      <p><%= link_to(t('hub.choose_a_certified_company_loa1.why_companies'), why_companies_path) %></p>

      <h2 class="heading-medium"><%= t 'hub.choose_a_certified_company_loa1.ab_test_variant_radio_verify_question' %></h2>

      <%= form_for(@recommended_idps, url: choose_a_certified_company_submit_path, html: {class: 'idp-radios', id: nil}) do |f| %>

        <div class="form-group">
          <fieldset>
            <%= collection_radio_buttons(nil, nil, @recommended_idps, :entity_id, :display_name) do |b| %>
              <div class="multiple-choice">
                <%=  
                  b.radio_button({name: 'entity_id'}) +  
                  b.label { b.text} +
                  image_tag(b.object.logo_path, {alt: b.object.display_name})
                %>
              </div>
            <% end %>
          </fieldset>
        </div>

        <div class="actions">
          <%= f.button t('hub.choose_a_certified_company_loa1.ab_test_variant_radio_verify_button'),
                  class: 'button',
                  type: 'submit'
          %>
        </div>

      <% end %>

    </div>
  </div>
</div>
